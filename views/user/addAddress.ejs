            <% if(profile !=null ) { %>
                <div class="col-md-6">
                    <div class="col-12 col-xl-12">
                        <div class="card h-100">
                            <div class="card-header pb-0 p-3">
                                <div class="row">
                                    <div class="col-md-8 d-flex align-items-center">
                                        <h6 class="mb-0">Saved Address</h6>
                                    </div>                                
                                </div>
                            </div>
                            <div class="card-body p-4 ">
                                <% profiles.forEach(function(address, index) { %>
                                    <hr class="horizontal dark my-4">
                                    <div class="col-md-12 text-end">
                                        <a href="/updateAddress/<%= index %>">
                                            <i class="fas fa-user-edit text-secondary text-sm"
                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="Edit Profile"></i>
                                        </a>
                                        <form action="/deleteAddress/<%= address._id %>" method="post">
                                            <button type="submit" class="fa fa-close" style="border-style: none; background-color: white; color: rgb(163, 159, 159);"></button>
                                        </form>
                                    </div>
                                    <ul class="list-group">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm" value="<%= address.fullName %>"><strong
                                                class="text-dark">Full Name:</strong> &nbsp; <%= address.fullName %>
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm" value="<%= address.currentAddress %>"><strong
                                                class="text-dark">Address:</strong> &nbsp; <%= address.currentAddress %>
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm" value="<%= address.country %>"><strong
                                            class="text-dark">Country:</strong> &nbsp; <%= address.country %>
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm" value="<%= address.state %>"><strong
                                                class="text-dark">State:</strong> &nbsp; <%= address.state %>
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm" value="<%= address.city %>"><strong
                                                class="text-dark">City:</strong> &nbsp; <%= address.city %>
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm" value="<%= address.pincode %>"><strong
                                                class="text-dark">Zip code:</strong> &nbsp; <%= address.pincode %>
                                        </li>
                                    </ul>
                                <% }) %>
