                    <form action="/addProfile/<%= user._id %>" method="post">
                        <div class="col-md-12">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <form class="needs-validation">
                                        <div class="form-row">
                                            <div class="col-md-6 mb-3">
                                                <label for="validationCustom3">Full name</label>
                                                <input type="text" name="fullName" class="form-control"
                                                    id="validationCustom3" value="" required>
                                                <div class="valid-feedback"> Looks good! </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="custom-phone">Gender</label>
                                                <div class="mt-1">
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            id="inlineRadio1" value="Male">
                                                        <label class="form-check-label" for="inlineRadio1">Male</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            id="inlineRadio2" value="Female">
                                                        <label class="form-check-label"
                                                            for="inlineRadio2">Female</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div> <!-- /.form-row -->
                                        <div class="form-group mb-3">
                                            <label for="address-wpalaceholder">Address</label>
                                            <input type="text" id="address-wpalaceholder" name="currentAddress"
                                                class="form-control" placeholder="">
                                            <div class="valid-feedback"> Looks good! </div>
                                            <div class="invalid-feedback"> Badd address </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-3 mb-3">
                                                <label for="validationSelect2">Country</label>
                                                <input class="form-control" name="country" id="custom-zip"
                                                    autocomplete="off" maxlength="9" required>
                                                <div class="invalid-feedback"> Please enter a valid country. </div>
                                            </div>
                                            <div class="col-md-3 mb-3">
                                                <label for="validationSelect2">State</label>
                                                <input class="form-control" name="state" id="custom-zip"
                                                    autocomplete="off" maxlength="9" required>
                                                <div class="invalid-feedback"> Please select a valid state. </div>
                                            </div>
                                            <div class="col-md-3 mb-3">
                                                <label for="validationCustom33">City</label>
                                                <input type="text" name="city" class="form-control"
                                                    id="validationCustom33" required>
                                                <div class="invalid-feedback"> Please provide a valid city. </div>
                                            </div>
                                            
                                            <div class="col-md-3 mb-3">
                                                <label for="custom-zip">Zip code</label>
                                                <input class="form-control input-zip" name="pincode" id="custom-zip"
                                                    autocomplete="off" maxlength="9" required>
                                                <div class="invalid-feedback"> Please provide a valid zip. </div>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary" type="submit">Submit form</button>
                                    </form>
                                </div> <!-- /.card-body -->
                            </div> <!-- /.card -->
                        </div> <!-- /.col -->
                    </form>
